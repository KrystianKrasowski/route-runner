{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Production build",
            "generator": "Unix Makefiles",
            "toolchainFile": "./cmake/arm-none-eabi-gcc.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "hidden": true,
            "cacheVariables": {
                "TARGET_ARCH": "libopencm3_stm32f3",
                "TARGET_HARDWARE": "stm32f3_libopencm3",
                "TARGET_RUNTIME": "freertos"
            }
        },
        {
            "name": "debug",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "test",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "TARGET_ARCH": "test",
                "TARGET_HARDWARE": "native_host",
                "TARGET_RUNTIME": "none",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "test",
            "configurePreset": "test"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "test",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
